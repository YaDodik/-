#include <iostream>
#include <vector>

std::vector<int> increaseVector(std::vector<int> vec, int n) {
    for (int i = 0; i < vec.size(); i++) {
        vec[i] += n;
    }
    return vec;
}

int main() {
    std::vector<int> originalVec = {1, 2, 3, 4, 5};
    int increaseBy = 10;

    std::vector<int> modifiedVec = increaseVector(originalVec, increaseBy);

    std::cout << "Original Vector: ";
    for (int num : originalVec) {
        std::cout << num << " ";
    }
    std::cout << std::endl;

    std::cout << "Modified Vector: ";
    for (int num : modifiedVec) {
        std::cout << num << " ";
    }
    std::cout << std::endl;

    return 0;
}
// Тест для функции increaseVector
void testIncreaseVector() {
    std::vector<int> testVec = {2, 4, 6, 8, 10};
    int testIncreaseBy = 5;

    std::vector<int> resultVec = increaseVector(testVec, testIncreaseBy);

    assert(resultVec[0] == 7);
    assert(resultVec[1] == 9);
    assert(resultVec[2] == 11);
    assert(resultVec[3] == 13);
    assert(resultVec[4] == 15);
}
